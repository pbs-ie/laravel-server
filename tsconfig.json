{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "jsx": "react-jsx",
        "noEmit": true,
        "isolatedModules": true,
        "allowJs": true,

        "strict": true,
        "noImplicitAny": true,

        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["resources/ts/*"],
            "@images/*": ["resources/images/*"],
            "@ziggy/*": ["vendor/tightenco/ziggy/*"],
            "test-utils": ["resources/ts/tests/utils/test-utils"]
        },
        "types": ["vite/client", "jest"],
        "esModuleInterop": true,
        "skipLibCheck": true,

        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "resources/ts",
        "resources/ts/**/*",
        "jest-setup.ts",
        "vendor/tightenco/**/*"
    ],
    "exclude": ["cypress.config.ts", "cypress", "node_modules", "public"]
}
